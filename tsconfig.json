{
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": false,
    "noUnusedLocals": false, 
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}